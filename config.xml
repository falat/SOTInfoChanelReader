<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        version="1.0.0.0"  
        id="SilesiaTravelCS">

  <name>Silesia.Travel MobileCS</name>
  <author>Global Solution</author>
  <description>Silesia travel mobile comunication system</description>

  <icon src="images/app_icon.png"/>
  
 
  <content src="index.html"/>

  <rim:navigation mode="focus" />
  
  <feature id="blackberry.invoke" />
  <feature id="blackberry.system.event" />
  <feature id="blackberry.app" />
  <feature id="blackberry.app.event"/>
  <feature id="blackberry.ui.dialog" />
 

  <rim:orientation mode="auto"/>

  <rim:navigation mode="focus"/>
  <access subdomains="true" uri="http://www.silesia-sot.pl/"/>
  <access subdomains="true" uri="http://sot.global-it.pl/"/>
  <access subdomains="true" uri="http://192.168.0.104" />
  <access subdomains="true" uri="*" />

  <rim:connection timeout="60000">
    <id>BIS-B</id>
    <id>TCP_WIFI</id>
    <id>TCP_CELLULAR</id>
    <id>MDS</id>
    <id>WAP2</id>
    <id>WAP</id>
    </rim:connection>
    
  <rim:permissions>
    <rim:permit>access_shared</rim:permit>
    <rim:permit>post_notifications</rim:permit>
    <rim:permit>read_device_identifying_information</rim:permit>
    <rim:permit>read_geolocation</rim:permit>
  </rim:permissions>

  <gap:splash src="res/screen/blackberry/screen-225.png"         gap:platform="blackberry" />
  <gap:splash src="splash.png" gap:platform="blackberry"/>
</widget>